{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": true
  },
  "include": ["build.config.ts", "src", "test"]
}
